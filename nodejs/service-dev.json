[
    {
        "environment"       : [], // environment variables
        "essential"         : true, // If the essential parameter of a container is marked as true, and that container fails or stops for any reason, all other containers that are part of the task are stopped.
        // healthCheck       : {
        //     command  : [""]
        //     interval : 30
        //     retries  : 1
        //     startPeriod : 10
        //     timeout  : 5
        // }
        "name"              : "app",
        "image"             : $IMAGE,
        "linuxParameters" : {
            "initProcessEnabled" : true // to execute execute-command command
        },
        "logConfiguration"  : {
            "logDriver" : "awslogs",
            "options"   : {
                "awslogs-group"         : $AWSLOGS_GROUP,
                "awslogs-region"        : $REGION,
                "awslogs-stream-prefix" : "ecs"
            }
        },
        "cpu"               : 100, // reserve
        "memory"            : 200, // limit
        "memoryReservation" : 100, // reserve
        "portMappings"      : [
            {
                "containerPort" : 3000,
                "hostPort"      : 0,
                "protocol"      : "tcp"
            }
        ],
        "ulimits": [
            {
              "name": "cpu",
              "softLimit": 100,
              "hardLimit": 200
            }
          ]
    }
]